<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.skydiary.StarryBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:startColor="?attr/startColor"
        app:endColor="?attr/endColor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:layout_marginBottom="30dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="@string/settings"
            android:textColor="@color/text_primary"
            android:textSize="52sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_auto_theme"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/auto_theme"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_light_theme"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/light_theme"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dark_theme"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/dark_theme"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            android:layout_marginBottom="40dp"
            app:backgroundTint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_language_en"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="English"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_language_ru"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Русский"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_language_es"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Español"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            app:backgroundTint="?attr/colorPrimary" />

    </LinearLayout>

</FrameLayout>