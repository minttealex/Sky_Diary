<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Кастомный фон со звездами -->
    <com.example.skydiary.StarryBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:startColor="@color/start_color"
        app:endColor="@color/end_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Settings Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="60dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Theme Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_light_theme"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/light_theme"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dark_theme"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/dark_theme"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            android:layout_marginBottom="60dp"
            style="@style/Widget.Material3.Button" />

        <!-- Language Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_language_en"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="English"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_language_ru"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Русский"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</FrameLayout>