<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.skydiary.StarryBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:startColor="?attr/startColor"
        app:endColor="?attr/endColor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="329dp"
            android:layout_marginBottom="30dp"
            android:paddingTop="100dp"
            android:paddingBottom="30dp"
            android:shadowColor="#80000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:text="Sky Diary"
            android:textColor="@color/text_primary"
            android:textSize="80sp"
            android:textStyle="italic" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_constellations"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:text="@string/constellations"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            android:layout_marginBottom="24dp"
            app:tint="?attr/colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_new_note"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:text="@string/new_note"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            android:layout_marginBottom="24dp"
            app:tint="?attr/colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_new_picture"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:text="@string/new_picture"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="20dp"
            app:tint="?attr/colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary" />

    </LinearLayout>

</FrameLayout>